<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SHΔDØW INVEST</title>
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-black text-white flex items-center justify-center min-h-screen">
    <div id="auth" class="p-8 border border-yellow-600 rounded-2xl w-80 text-center">
        <h1 class="text-2xl font-bold text-yellow-500 mb-6">دخول المستثمرين</h1>
        <input id="e" type="email" placeholder="الجيميل" class="w-full p-2 mb-4 bg-zinc-900 border border-zinc-700 rounded">
        <input id="p" type="tel" placeholder="الهاتف" class="w-full p-2 mb-6 bg-zinc-900 border border-zinc-700 rounded">
        <button onclick="go()" class="w-full bg-yellow-600 p-2 rounded font-bold text-black">دخول</button>
    </div>
    <div id="pro" style="display:none" class="text-center p-8">
        <h2 class="text-xl">رصيدك الحالي</h2>
        <p class="text-5xl font-bold text-green-500 my-4"><span id="b">0.00</span> $</p>
        <button class="bg-zinc-800 p-4 rounded text-sm">تواصل مع الإدارة لشحن الرصيد</button>
    </div>
    <script>
        const S_URL = 'https://jcrdagztrraffegnzyzs.supabase.co';
        const S_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImpjcmRhZ3p0cnJhZmZlZ256eXpzIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjY4NDE0MzEsImV4cCI6MjA4MjQxNzQzMX0.EiJ50ubReAYkfiOJgOth6NtBsuyUNwag80rJMsqgc4A';
        const _s = supabase.createClient(S_URL, S_KEY);
        async function go() {
            const e = document.getElementById('e').value;
            const p = document.getElementById('p').value;
            if(!e || !p) return alert("أدخل البيانات");
            const { data, error } = await _s.from('users').upsert([{ email:e, phone:p, balance:0 }], { onConflict: 'email' }).select().single();
            if(error) return alert("خطأ: " + error.message);
            document.getElementById('auth').style.display = 'none';
            document.getElementById('pro').style.display = 'block';
            document.getElementById('b').innerText = data.balance;
        }
    </script>
</body>
</html>
